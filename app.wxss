/**app.wxss**/
@import "style/weui.wxss";
@import "style/icon.wxss";
text{
    font-size: 12px;
}
.clearfix{
    overflow:auto;
    _height:1%;
}
.weui-cell__desc{
    font-size: 12px;
    color: #666;
}
.page-loading{
    position: fixed;
    top: 0; left: 0; bottom: 0; right: 0;
    margin: auto;
    width: 64px;
    height: 64px;
    background-image: url(data:image/svg+xml;base64,);
}
.icon-empty-list{
    width: 150px;
    height: 150px;
    background-image:url(data:image/svg+xml;base64,);
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    margin: 10px 0;
}
.product-quantity{
    display: flex;
    align-items: center;
    height: 28px;
}
.product-quantity button,.product-quantity input{
    font-size: 14px;
    font-weight: bolder;
    margin: 0;
    padding: 0;
}
.product-quantity button{
    width: 20%;
    width: 30px;
    border-radius: 0;
    border:1px #ccc solid;
    font-family:monospace;
    font-size: 18px;
    line-height: 27px;
    height: 30px;
}
.product-quantity button:first-child{
    border-radius: 2px 0 0 2px;
}
.product-quantity button:last-child{
    border-radius: 0 2px 2px 0;
}
.product-quantity input{
    max-width: 50px;
    height: 100%;
    border: 1px #ccc solid;
    border-left: none;
    border-right: none;
    text-align: center;
}

.promotion-list .p-item{
    display: flex;
    flex-wrap: nowrap;
    flex-direction:row;
    align-items:baseline;
    font-size: 12px;
}
.promotion-list .p-tag{
    color:#f30;
    border: 1px solid #f30;
    font-size: 10px;
    line-height: normal;
    margin-right: 5px;
    border-radius: 2px;
    padding: 1px;
}

.promotion-list .p-save{
    margin-left: 15px;
}

.quick-modal{
    z-index: 199;
    position: fixed;
    display: none;
    opacity: 0;
    align-content: flex-end;
    width: 100%;
    height: 100%;
    top:0;
    left: 0;
    background: rgba(0,0,0,0.5);
}
.quick-modal.active{
    display: flex;


}
.quick-modal .modal-hd{
    background: rgba(255,255,255,0.9);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content:space-between;
    padding: 5px 15px;
    color: #666;
}
.quick-modal .modal-hd text{
    font-size: 14px;
}

.quick-modal .modal-section{
    width: 100%;
    align-self: flex-end;
}
.button-cell{
    padding: 0;
}
.button-cell button{
    width: 100%;
    border-radius: 0;
}
.button-cell button::after{
    border-radius: 0;
}
.panel-ft-actions{
    display: flex;
    padding: 5px 15px;
    border-top: 1px #e9e9e9 solid;
    justify-content: flex-end;
}
.panel-ft-actions button{
    margin: 0;
    margin-left: 10px;
}
.region-picker-view{
    font-size: 17px;

}
.region-picker-view .column view{
    line-height: 30px;
    height: 30px;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
}

.weui-cell__hd~.weui-cell__bd{
    padding-left: 20px;
}


.prompt-panel{
    display: flex;
    flex-direction:column;
    align-items: center;
}
.prompt-panel image{
    width: 120px;
    height: 120px;
    margin: 50px 0 30px 0;
}
.prompt-panel .icon-empty-list{

    margin: 50px 0 30px 0;
}
.prompt-panel .text{
    font-size: 14px;
    margin-bottom: 30px;
}
.prompt-panel .navigator{
    background: #fff;
    line-height: 45px;
    width: 70%;
    text-align: center;
    border-radius: 4px;
}
.weui-navbar__item{
    padding: 5px 0;
}
.weui-bar__item_on{
    padding-bottom: 2px;
    border-bottom: 3px rgb(227,69,69) solid;

}
.weui-bar__item_on .weui-navbar__title{
    color: #333;

}
/**tpl widgets **/
.widgets-swiper-goods{
    display: flex;
    flex-direction:row;
    padding: 10px 0;
}
.widgets-swiper-goods .gl-item-nav{
    width: 90px;
}
.widgets-swiper-goods image{
    width: 90px;
    height: 90px;
}
.widgets-swiper-goods .g-price{
    font-weight: lighter;
    color: #f00;
    font-size: 12px;
    font-stretch: ultra-condensed;
    text-align: center;
}

.widgets-flwx-brand{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.widgets-flwx-brand .nav-item{
    width: 25%;
    position: relative;
    text-align: center;
}

.widgets-flwx-brand .item{
    border-bottom: 1px #efefef solid;
    border-right: 1px #efefef solid;
}
.widgets-flwx-brand .nav-item-active .item{
    border-bottom-color: #e9e9e9;
    border-right-color: #e9e9e9;
}
.widgets-flwx-brand image{
    width: 80%;
    height: 90px;
}
.widgets-flwx-brand .brand-name{
    background: rgba(0,0,0,0.7);
    font-size: 12px;
    color: #fff;
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    text-align: center;
    display: none;
}
.contact-button{
    position: fixed;
    right:10px;
    bottom:10px;
    color: #fff;
    background: rgba(0,0,0,0.5);
    width: 50px;
    height: 40px;
    padding-top: 10px;
    font-size: 12px;
    line-height: 10px;
    border: 1px #fff solid;
    text-align: center;
    border-radius: 100%;

}

.media-box-actions{
    text-align: right;
}

.media-box-actions button{
    background: #fff;
    line-height: 1.8;
    font-size: 14px;
    border-color: #ccc;
    border-radius: 2px;
    margin: 5px 0 0 10px;

}
.media-box-actions button:after{
    border-radius: 2px;
}

/**vshop **/
.profit-tip{
    display: inline-table;
}
.profit-tip .profit{
    display: flex;
    align-items: center;
    justify-content:space-between;
    font-size: 12px;
    border: 1px #ee3c3a solid;
    color: #ee3c3a;
    border-radius: 2px;
}
.profit-tip .profit view{
    padding: 0px 5px;

}
.profit-label{
    background: #ee3c3a;
    color: #fff;
}
.profit-tip .recommend{
    background: #ddd;
    color: #fff;
}
.profit-tip .recommend.active{
    background: #ee3c3a;
    color: #fff;
}
/**
.side-tools
*/
.side-tools{
  position: fixed;
  right: 15px;
  bottom: 55px;
}
.side-tools button,.side-tools button::after,.side-tools button::before{
    border-radius: 100%;
}
.side-tools button[plain]{
    background: rgba(255,255,255,0.6);
    border-color: #ccc;
}
.side-tools button{
    margin-bottom: 10px;
}
.weui-btn + .weui-btn{
    margin-top: 0;
}