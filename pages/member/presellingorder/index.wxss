page{
    background: #efefef;
}
.scroll-tab{
    background-color: #fff;
}
.weui-navbar{
    height: 44px;
    background: #fff;
}
.weui-bar__item_on{
    border-bottom: 3px solid #F83D38;
}
.weui-bar__item_on .weui-navbar__title{
    color: #F83D38;
}
.weui-navbar__title{
    height: 34px;
    line-height: 34px;
}
.weui-navbar__item{
    padding: 5px 15px;
}
.weui-panel__hd{
    padding: 7px 15px 5px;
}
.pslorder-status{
    float: right;
}
.weui-panel__hd:after{
    display: none;
}
.weui-panel__bd{
    border-bottom: 1px #e9e9e9 solid;
    border-top: 1px #e9e9e9 solid;
    background: #fcfcfc;
}
.weui-panel__ft{
    text-align: right;
    font-size: 13px;
    padding:7px 15px;
}
.order-list .order-item .dead{
    opacity: 0.8;
     -webkit-filter: grayscale(100%);
}
.order-item-panel{
    display: flex;
    align-items: center;
    flex-direction: row;
    padding: 10px 15px 5px 15px;
}

.item-desc{
    font-size: 13px;
}
.item-image image{
    width: 64px;
    height: 64px;
    margin-right: 10px;
    border: 1px #e9e9e9 solid;
    border-radius: 2px;
}
.price-detail{
    font-size: 14px;
    color: #888888;
}
.pay-deposit,.pay-balance{
    background-color: #F83D38 !important;
    border: 1px solid #F83D38 !important;
    color: #ffffff !important;
}
.tips{
    background-color: #FFF9EB;
    text-align: right;
    padding: 8px 15px;
}
.tips-inner{
    width: 100%;
    height: 25px;
    line-height: 25px;
    font-size: 14px;
}
.tips::before{
    border-top: none;
}
button{
    margin-left: 10px;
}
.text-danger{
    color:red;
}
.special-ft{
    position: relative;
    padding-right: 25px;
}
.show-hide{
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
    transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
    position: absolute;
    top: 4px;
    right: 8px;
}
.show{
    -webkit-transform: matrix(0.71, -0.71, 0.71, 0.71, 0, 0);
    transform: matrix(0.71, -0.71, 0.71, 0.71, 0, 0);
    top: 7px;
}
.detail-block{
    background-color: #FFF9EB;
    padding: 15px;
}
.detail-show{
    display: block;
}
.detail-hide{
    display: none;
}
.detail-item{

}
.left-block{
    float: right;
    width: 120px;
    height: 28px;
    line-height: 28px;
    text-align: left;
    color: #898989;
}
.right-block{
    float: right;
    color: #898989;
}