.coupon{
    position: relative;
    background: #f60;
    margin: 10px 10px;
    color: #fff;
    font-size: 14px;
    padding: 20px 15px;
    border-left: 2px dashed #efefef;
    border-right: 2px dashed #efefef;
    overflow: hidden;
}
.coupon .time-limit{
    font-size: 12px;
    color: rgba(255,255,255,.5);

}
.coupon .name{
    font-size: 16px;
}
.coupon .code{
    font-size: 12px;
    color: rgba(255,255,255,.7);
    text-align: right;
    text-transform:uppercase;
}
.coupon .transform{
    position: absolute;
    width: 100%;
    left: 40%;
    height: 500%;
    right: 0;
    top:0;
    background: rgba(255,255,255,.11);
    transform: rotate(-30deg);
}
.coupon .description{
    font-size: 12px;
}
.coupon-box{
    display: flex;
    align-content:space-between;
}
