page{
    background: #efefef;
}
.weui-navbar{
    background: #fff;
}
.weui-search-bar{
    border-top-width: 35px;
    font-size: 14px;
    line-height: 28px;
}
picker{
    font-size: 14px;
    margin-right: 5px;
    line-height: 28px;
    color: #666;
    margin: 0 5px;
}
.price{
    color: #f30;
    font-weight: lighter;
}

.weui-cell__bd {
    font-size: 14px;
}
.weui-panel__hd:after{
    display: none;
}
.weui-form-preview__hd .weui-form-preview__value{
    font-size: 22px;
}
.status-icon{
    display: inline-block;
    color: #000;
    border: 1px #999 solid;
    border-radius: 2px;
    font-size: 12px;
    padding: 1px 4px;
    margin-left: 10px;
}
.status-icon.status-ready{
    border-color: rgb(264,45,115);
    color:rgb(264,45,115);
}
.status-icon.status-process{
    border-color: rgb(107,207,237);
    color:rgb(107,207,237);
}
.status-icon.status-succ{
    border-color: rgb(64,181,33);
    color:rgb(64,181,33);
}
.cell-total{
    font-size: 12px;
    text-align: right;
}
.item-desc{
    font-size: 13px;
}
.item-image image{
    width: 50px;
    height: 50px;
    margin-right: 10px;
    border: 1px #e9e9e9 solid;
    border-radius: 2px;
}
