page{
    padding-bottom: 45px;
}
.new-invitecode-btn{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    margin: 0;
    border-radius: 0;
}

.new-invitecode-btn::after{
    border-radius: 0;
}

.invitation{
    position: relative;
    background: #f30;
    margin: 10px 10px;
    color: #fff;
    font-size: 14px;
    padding: 5px 15px;
    border-left: 2px dashed #efefef;
    border-right: 2px dashed #efefef;
    overflow: hidden;
}
.invitation.used{
    background: #999;
}
.invitation .create-time{
    font-size: 12px;
    color: rgba(255,255,255,.5);

}
.invitation .code-body{
    display: flex;
    align-items: center;
    justify-content:space-between;
}

.invitation .used{

    font-size: 12px;
    color: rgba(255,255,255,.8);
}
.invitation .code{
    font-size: 32px;

}
.invitation .code,.invitation .used-shop{
    padding: 0 20px 0 0;
}
.invitation .status{
    padding: 2px 5px;
    border: 1px #fff solid;
    border-radius: 5px;

}
.invitation .transform{
    position: absolute;
    width: 100%;
    left: 30%;
    height: 130%;
    right: 0;
    top:0;
    background: rgba(255,255,255,.11);
    transform: rotate(-30deg);
}
.invitation .description{
    font-size: 12px;
}
.invitations.logs .invitation{
    background: #f90;
}
.full-screen{
    background: #fff;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    top:0;
    left: 0;
}
.full-screen .invitation-code{
    font-size: 64px;
    width: 100%;
    text-align: center;
    padding-top:35%;
}
