/* 申请信息 */
.verify-step {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding: 40rpx 0 55rpx;
  background-color: #fff;
}
.step-dotted {
  width: 164rpx;
  margin-top: 24rpx;
  border-top: 4rpx dotted rgba(183,183,183,1);
}

.verify-step view view {
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  text-align: center;
}
.verify-step view view.verify-number{
  color:#fff;
}
.verify-step view view.verify-number-submit{
  color:rgba(183,183,183,1);
}
.verify-number {
  margin: auto;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 48rpx;
  margin-bottom: 14rpx;
  color: #fff;
  background-color: rgba(183,183,183,1);
}
.verify-number-submit {
  background:rgba(255,255,255,1);
border:3rpx solid rgba(183,183,183,1) ;
color:rgba(183,183,183,1)
}

.verify-txt {
  height:86rpx;
  line-height: 86rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
background:rgba(245,245,245,1);
font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(102,102,102,1);
}

.verify-btn {
  width: 100%;
  height:98rpx;
  background:rgba(102,153,255,1);
  line-height: 98rpx;
  text-align: center;
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  position: fixed;
  left: 0;
  bottom: 0;
}

.classify {
  margin: 32rpx auto 53rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

.classify>view {
  width: 330rpx;
  text-align: center;
  height: 76rpx;
  line-height: 76rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  border-radius:4rpx;
  border:2rpx solid #999999;
}
.classify>view:nth-child(1) {
  margin-right: 30rpx;
}
.classify .active {
  color: #6699FF;
  border: 2rpx solid #6699FF;
}
.classify>view>image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}

.verify-step .step {
  background:rgba(102,153,255,1);
  box-shadow:0px 2px 11px -3px rgba(34,91,205,1);
  color: #fff;
}
.verify-step .step-text {
  color: rgba(102,153,255,1);
}

.personal {
  height: 96rpx;
  border-bottom: 1px solid #E7E7E7;
  display: flex;
  justify-content: flex-start;
  align-items: center;
 
}
.personal>label {
  display: inline-block;
  height: 96rpx;
  line-height: 96rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-left: 29rpx;
  margin-right: 19rpx;
}

.personal input {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  border: none;
  outline: none;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
}

.reminder {
  text-align: center;
  color: red;
  height: 50rpx;
  line-height: 50rpx;
  background-color: rgb(187, 184, 184);
  font-size: 24rpx;
}

.IDimage {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 28rpx;
}
.IDimage label {
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-left: 29rpx;
  margin-right: 19rpx;
}

.IDimage .IDimage-text {
  width: 180rpx;
  height: 226rpx;
  background:#F7F7F7;
  border:2rpx solid #E2E2E2;
  margin-top: 20rpx;
  margin-right: 28rpx;
}
.IDimage>view>text {
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(174,174,174,1);
  margin: 0;
}

.IDimage .IDimage-text text {
  display: block;
  text-align: center;
  margin: 10rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
}

.IDimage .IDimage-text text:nth-child(1) {
  margin-top: 54rpx;
  font-size: 38rpx;
}

.IDimage .IDimage-text image {
  width: 100%;
  height: 226rpx;
  vertical-align: middle;
}

.none {
  display: none;
}
.uploadimage image {
  width: 180rpx;
  height: 226rpx;

}
.uploadimage {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
} 