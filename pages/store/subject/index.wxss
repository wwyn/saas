page{
    background: #efefef;
    padding-bottom: 50px;
}
.wp-first{
    margin-top: 0;
}
.weui-media-box__title{
    font-size: 14px;
}
.weui-media-box__info{
    margin-top: 5px;
}
.subject-box .weui-media-box__thumb{
    width: 45px;
    height: 45px;
    margin-right: 5px;
    border-radius: 4px;
}
.store-name{
    text-align: center;
    padding: 15px 0;
    background: #fff;
}
.banner{
    height: 200px;
    position: relative;
}
.banner image{
    width: 100%;
    height: 100%;
}
.banner .btn-desc{
    position: absolute;
    right:15px;
    bottom:15px;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 4px;
    padding: 3px 5px 3px 5px;
    font-size: 12px;
    color: #fff;
}
.slide{
    width: 100%;
    height: 100%;
}
map{
    width: 100%;
    height: 350px;
}
.fix-foot-bar{
    background: #efefef;
    height: 50px;
    width: 100%;
    position: fixed;
    display: flex;
    flex-direction: row;
    bottom: 0;
    left: 0;
    z-index: 100;
}
.foot-left{
    width: 30%;
    text-align:left;
    display: flex;
    align-items: center;
    text-align: center;
    padding-left: 15px;
}
.foot-right{
    width: 70%;
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
}
.btn-area{
    display: flex;
    align-items: center;
    flex-direction:row-reverse;

}
.btn-area button{
    height: 35px;
    line-height: 35px;
    font-size: 14px;
    display: inline-block;
    border-radius: 4px;
    margin: 0;
    margin-right: 15px;
}
.banner{
    position: relative;
}
.keywords{
    position: absolute;
    right: 10px;
    bottom:10px;
    display: flex;
    align-items: center;
}
.keywords view{
    font-size: 12px;
    border: 1px #fff solid;
    color: #fff;
    border-radius: 4px;
    padding: 0 4px;
    margin-left: 5px;
    background: rgba(0, 0, 0,0.1);
}
.gpsdistance{
    font-size: 12px;
    color: #ccc;
    float: right;
}
.footer-btn{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    margin: 0;
    border-radius: 0;
}

.footer-btn::after{
    border-radius: 0;
}
picker-view{
    font-size: 14px;
}
picker-view .dateday{
    line-height: 27px;
}
picker-view .weekday{
    font-size: 12px;
    padding-top: 0;
    color: #666;
}
picker-view .from_time{
    line-height: 27px;
}
picker-view .from_time,picker-view .to_time{
    font-size: 12px;
    color: #666;
}
.ticket-item .weui-media-box__hd{
    padding-right: 10px;
}
.ticket-item .weui-media-box__bd{
    width: 100%;
}
.ticket-item .weui-media-box__ft{
    width: 40%;
    font-size: 16px;

}
.price{
    color: #f00;
    font-weight: lighter;
    text-align: right;
}
.ticket-item .weui-media-box__ft .cny{
    font-size: 12px;
    color: #999;
}
.ticket-item.selected{
    background: linear-gradient(to left,rgba(252,253,187,0.2),rgba(255,255,255,0),rgba(255,255,255,0));
}
.modal-section{
    background: #FFF;
}
.weui-label{
    width: 50px;
}
.success-icon{
    padding-top: 15px;
    text-align: center;
}
.success-icon .si-tip{
    line-height: 30px;
    font-size: 14px;
    color: #999;
}
.no-top{
    padding-top: 0;
}
.no-before::before{
    border-top: none;
}
