page{
    background: #efefef;
    padding-bottom: 50px;
}
.wp-first{
    margin-top: 0;
}
.weui-media-box__title{
    font-size: 16px;
}
.weui-media-box__info{
    margin-top: 5px;
}
.subject-box .weui-media-box__thumb{
    width: 45px;
    height: 45px;
    margin-right: 10px;
    border-radius: 4px;
}
.store-name{
    text-align: center;
    padding: 15px 0;
    background: #fff;
}
.slider{
    height: 275px;
}
.slide{
    width: 100%;
    height: 100%;
}
map{
    width: 100%;
    height: 350px;
}
.fix-foot-bar{
    background: #efefef;
    height: 50px;
    width: 100%;
    position: fixed;
    display: flex;
    flex-direction: row;
    bottom: 0;
    left: 0;
    z-index: 100;
}
.foot-left{
    width: 30%;
    text-align:left;
    display: flex;
    align-items: center;
    text-align: center;
    padding-left: 15px;
}
.foot-right{
    width: 70%;
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
}
.btn-area{
    display: flex;
    align-items: center;
    flex-direction:row-reverse;

}
.btn-area button{
    height: 35px;
    line-height: 35px;
    font-size: 14px;
    display: inline-block;
    border-radius: 4px;
    margin: 0;
    margin-right: 15px;
}

.gpsdistance{
    font-size: 12px;
    color: #ccc;
    float: right;
}
.no-top{
    padding-top: 0;
}
.no-before::before{
    border-top: none;
}


.weui-form-preview__item{
  line-height:20px;
  font-size:14px;
}