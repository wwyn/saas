page{
    background: #efefef;
}
.cat-select{
    padding: 5px 5px 0 5px;
    width: 100%;
    background: #efefef;
}
.cat-select button{
    margin: 5px 5px 0 5px;
    border-radius: 5px;
    font-size: 14px;
    line-height: 1.7;
    padding: 0 10px;
}
.cat-select button.current{
    background: #fff;
}
.weui-panel{
    margin: 10px 10px 0 10px;
    border-radius: 5px;
}
.icon-location{
    width: 16px;
    height: 16px;
}
.weui-panel::after{
    display: none;
}
.weui-panel:first-child{
    margin-top: 15px;
}
.weui-panel:last-child{
    margin-bottom: 15px;
}
.weui-panel__hd:after{
    display: none;
}
.weui-media-box__info{
    margin-top: 5px;
}
.subject-box .weui-media-box__thumb{
    width: 45px;
    height: 45px;
    margin-right: 5px;
    border-radius: 4px;
}
image{
    width: 100%;
    height: 200px;
    display: block;
}
.gpsdistance{
    font-size: 12px;
    color: #ccc;
    float: right;
}
.subject-box .weui-media-box__title{
    font-size: 16px;
}
.weui-footer{
    padding: 15px 0 15px 0;
}
