page{
    background: #fff;
    padding-top: 34px;
}
.weui-navbar{
    background: #fff;
}
.crecord-item{

    padding: 10px 15px 10px 15px;
    border-bottom: 1px #ececec solid;
}
.ci-hd{
    display: flex;
    margin-bottom: 10px;
}
.c-id{
    font-size: 12px;
    text-align: center;
    color: #ccc;
}
.ci-ft{
    background: #efefef;
    border-radius: 5px;
    padding: 5px;
}
.c-time{
    font-size: 12px;
    color: #999;
}
.c-recipient{
    font-size: 12px;
    color: #777;
    display: flex;
    align-items: center;
}

.cr-name{
    color:#000;
    margin-left: 5px;
}
.c-recipient .avatar{
    width: 30px;
    height: 30px;
    border-radius: 30px;
}
.card-style{
    background: #fff;
    border-radius: 5px;
    box-shadow: 0 0 2px 1px #e9e9e9;
}
.card-style image{
    display: block;
    border-radius: 5px;
    width: 100%;
    height: 100%;
}
.crecord-info{
    padding:0 15px 0 15px;
}
.c-use{
    font-size: 12px;
    color: #777;
    padding: 4px 0 0 0;
}
.c-memo{
    font-size: 12px;
    color: #777;
}
