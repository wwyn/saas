@import "style/cardinfo.wxss";
page{
    background: #efefef;
}
.c-memo{
    background: #fff;
    position: relative;
    margin-left: 15px;
    margin-top: -15px;
    padding: 25px 10px 10px 10px;
    border-radius: 0 0 5px 5px;
    display: flex;
    align-content: space-around;
}
.member-info{
    text-align: center;
    font-size: 14px;
}
.avatar{
    width: 64px;
    height: 64px;
    border-radius: 64px;
}
.c-info{
    padding-left: 10px;
    text-align: right;
    width: 100%;
}
.c-info .ci2{
    font-size: 14px;
    color: #777;
}
