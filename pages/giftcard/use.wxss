page{
    background: #efefef;
    padding-bottom: 55px;
}
.card-info-panel{
    display: flex;
    background: #fff;
    padding: 10px 0 10px 0;
}
.card-info-panel .c-cid text{
    color: #ccc;
}
.card-info-panel .c-cid{
    font-size: 12px;

}
.card-info-panel .card-image{
    box-shadow: 0 0 2px 1px #ccc;
    border-radius: 5px;
    margin: 0 10px 0 15px;
}
.card-info-panel .card-image image{
    width: 100%;
    height: 100%;
    display: block;
    border-radius: 5px;
}
.card-info .c-price{
    text-align: right;
}
.c-memo{
    font-size: 14px;
    color: #777;
}
.card-items .weui-cells{
    margin: 0;
}
.location-box{
    width: 20px;

}
.location-box image{
    width: 20px;
    height: 20px;
}
.name-and-mobile{
    display: flex;
}
.name-and-mobile .mobile{
    margin-left: 10px;
}
.name-and-mobile .name text{
    color: #666;
}
.checkout-footer{
    z-index: 10;
    font-size: 12px;
    height: 45px;
    background-color: rgba(0,0,0,.8);
    color: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.checkout-total{
    padding-left: 15px;

}
.checkout-total text{
    font-weight: lighter;
    font-stretch: ultra-condensed;
}
.submit-order{
    margin: 0;
    border-radius: 0;
}
.submit-order::after{
    border-radius: 0;
}
