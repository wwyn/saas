page{
    padding-bottom: 45px;
    background:#efefef;
}
.container{
    min-height: 100%;
}
.location-box{
    width: 20px;

}
.location-box image{
    width: 20px;
    height: 20px;
}
.name-and-mobile{
    display: flex;
}
.name-and-mobile .mobile{
    margin-left: 10px;
}
.name-and-mobile .name text{
    color: #666;
}
.co-item{
    padding-right: 25px;
}
.co-name{
    color: #333;
}
.co-price{
    line-height: 22px;
    color: #f60;
    font-weight: lighter;
    font-stretch: ultra-condensed;
}
.co-price text{
    color: #999;
}

.co-inline{
    display: flex;
    align-items: center;
    justify-content:space-between;
}
.goods-promotion{
    line-height: 25px;
}
.order-promotion .weui-cell_link{
    color: #666;
}
.cart-total{
    font-size: 12px;
    text-align: right;
    display: block;
}
.cart-total .price{
    color: #f60;
    font-size: 14px;
    font-weight:lighter;
}


.checkout-footer{
    z-index: 10;
    font-size: 12px;
    height: 45px;
    background-color: rgba(0,0,0,.8);
    color: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.checkout-total{
    padding-left: 15px;

}
.checkout-total text{
    font-weight: lighter;
    font-stretch: ultra-condensed;
    color: #f90;
}
.submit-order{
    margin: 0;
    border-radius: 0;
}
.submit-order::after{
    border-radius: 0;
}

.cost-freight{
    font-size: 12px;
    text-align: right;
}
.weui-footer{
    margin-top: 20px;
}
