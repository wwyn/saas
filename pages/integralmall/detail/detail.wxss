@import "/utils/wxParse/wxParse.wxss";
.wxParse-img{
    width: 100%;
    display: block;
}
page{
    background: #efefef;
    padding-bottom: 45px;
}
.product-desc-loader{
    padding: 10px 0;
    margin-top: 10px;
    color: #999;
    text-align: center;
    font-size: 14px;
}
.product-desc-loader icon{
    margin-bottom: 5px;
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
.tabbar-menu{
    overflow: hidden;
    height: 0;
}
.product-brand image{
    width: 50px;
    height: 50px;
}
.product-brand .weui-media-box{
    padding: 5px 15px;
}
.product-brand .weui-media-box__hd{
    margin-right: 10px;
}
.product-desc view{
    word-break:break-all;
    overflow:auto;
}

.product-desc .weui-form-preview:before,.product-desc .weui-form-preview:after{
    border: none;
}
.product-desc .weui-form-preview__hd{
    text-align: left;
    line-height: normal;
    font-size: 14px;
}
.product-desc .weui-form-preview__bd{
    line-height: normal;
    font-size: 12px;
}
.product-buycount{
    display: flex;
}
.slider{
    width: 100%;
    background: #fff;
    height: 300px;
}
.slide{
    margin-top: 5px;
    display: inline-block;
    width: 100%;
    height: 100%;
}

.product-name{
    font-size: 14px;
    color: #333;
}
.price{
    font-weight: lighter;
    color: #f00;
    font-size: 18px;
    font-stretch: ultra-condensed;
}

.product-container .weui-panel{
    margin-top:0;
}
.spec-select{
    font-size: 14px;
    margin-bottom: 10px;
}
.spec-title{
    min-width: 70px;
}
.spec-select,.spec-options{
    display: flex;

}
.spec-options{
    flex-wrap: wrap;
    justify-content: flex-start;
}
.spec-item{
    border: 1px #ccc solid;
    margin: 0 5px 5px 0;
    padding: 3px 5px 3px 5px;
    display: flex;
    align-items: center;

}
.spec-item image{
    width: 40px;
    height: 40px;
}
.spec-item.active{
    border-color:#f60;
    color:#f60;
}
.spec-item.disabled{
    border-style: dashed;
    color: #ccc;
}
.spec-item.disabled image{
    opacity: 0.5;
}
.pb-label{
    font-size: 14px;
    width: 70px;
}
.fix-foot-bar{
    background: #efefef;
    height: 45px;
    width: 100%;
    position: fixed;
    display: flex;
    flex-direction: row;
    bottom: 0;
    left: 0;
    z-index: 100;
}

.fix-foot-bar .btn-redirect{
    height: 45px;
    line-height: 45px;
    margin: 0;
    font-size: 14px;
    border-radius: 0;
    width: 100%;
    text-align: center;
    background: #EF4F4F;
    color: #fff;
}
.fix-foot-bar .btn-redirect::before,.fix-foot-bar .btn-redirect::after{
    display: none;
    border-radius: 0;
}
.fix-foot-bar .btn-disabled{
    background: #e9e9e9;
    color: #333;
}
.price-area{
    display: flex;
    align-items:center;
}

.g-price{
    font-weight: lighter;
    color: #f00;
    font-size: 14px;
    font-stretch: ultra-condensed;
    display: flex;
    align-items: center;
    margin-left: 4px;
}
.jf-label{
    font-size: 12px;
    color: #666;
    margin-left: 4px;
}
.g-price-del{
    font-size: 12px;
    color: #999;
    /*font-style: oblique;*/
    text-decoration: line-through;
}
.product-actions{
    position: absolute;
    display: flex;
    align-items: center;
    right: 15px;
}
.product-actions .icon{
    width: 25px;
    height: 25px;
    vertical-align: inherit;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 2px;
    background-size: 20px 20px;
}

.product-actions .action-item{
    margin-left: 10px;
}
.goTop{
  bottom:60px;
  right:10px;
}
.goHome{
  bottom:110px;
  right:10px;
}