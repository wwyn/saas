page{
    padding-top: 48px;
    background: #ececec;
}
.goods-list{
    background: #fff;
    display: flex;
    flex-direction:row;
    flex-wrap: wrap;
    justify-content: center;
    align-items:stretch;
    border-top: 1px #efefef solid;
}
.gl-item{
    flex: auto;
    width: 50%;
}
.co-item .weui-media-box__hd{
    width: 30%;
    height: 90px;
    line-height: 90px;
    overflow: hidden;
}
.co-item .weui-media-box__hd image{
    width: 100%;
    height: 100%;
    margin: 0;
}
.co-item .weui-media-box__bd{
    width: 70%;
}
.co-item{
    padding-right: 25px;
}
.co-name{
    color: #333;
}
.co-price{
    line-height: 22px;
    color: #f60;
    font-weight: lighter;
    font-stretch: ultra-condensed;
}
.co-price text{
    color: #999;
}

.co-inline{
    display: flex;
    align-items: center;
    justify-content:space-between;
}
.gl-item-nav{
    border-bottom: 1px #efefef solid;
    border-right: 1px #efefef solid;
    padding: 10px;
}
.gl-item-nav:nth-child(n+2){
    border-right: none;
}

.goods-list.grid image{
    width: 99%;
    margin: 10px 0 10px 0;
    height: 200px;
}
.gl-item text{
    display: block;
}
.g-name{
    line-height: 25px;
    height: 25px;
    overflow: hidden;

}
.g-price{
    font-weight: lighter;
    color: #f00;
    font-size: 14px;
    font-stretch: ultra-condensed;
}
.weui-search-bar{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
}
.weui-search-bar .filter{
    width: 30px;
    height: 30px;
    text-align: center;
    position: relative;
    margin-left: 5px;
}
.weui-search-bar .filter-icon{
    width: 20px;
    height: 20px;
    margin: 5px 0 0 0;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 16px;
    overflow: hidden;
}
.tpl-icon{
    width: 20px;
    height: 20px;
    margin: 5px 0 0 0;
    background-position: center;
     background-repeat: no-repeat;
    background-size:  16px;
    overflow: hidden;
}
.weui-search-bar .filter icon{
    position: absolute;
    top:2px;
    right: 2px;
}
.screen-panel{
    z-index: 199;
    position: fixed;
    display: none;
    flex-direction:row-reverse;
    align-content: flex-end;
    width: 100%;
    height: 100%;
    top:0;
    left: 0;
    background: rgba(0,0,0,0.5);
}
.screen-panel.active{
    display: flex;
}
.screen-panel .weui-cells{
    margin: 0;
    padding: 0;
}
.screen-panel .sp-wrap{
    width: 80%;
    background: #fff;
}
.weui-cell{
    font-size: 12px;
}
.weui-cell__hd{
    width: 20%;
}
.screen-wrap .weui-cell__hd{
    white-space: nowrap;
}
.screen-wrap .weui-cell__bd .f-item{
    float: left;
    padding: 5px 10px;
    border:1px #fff solid;
}
.screen-wrap .weui-cell__bd .f-item.active{
    border-color:#ccc;
    color: #333;
}
.weui-cell__bd.no-hd{
    padding-left: 0;
}

.weui-cells::before{
    border: none;
}
.cat-path{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items:stretch;
    background: #e9e9e9;
}
.cat-path view{
    font-size: 14px;
    text-align: center;
    height: 30px;
    line-height: 30px;
    flex-grow:1;
}
.cat-path view:last-child{
    background: #fff;
    color:#333;
}

.more{
    font-size: 12px;
    text-align: center;
    line-height: 30px;

}
