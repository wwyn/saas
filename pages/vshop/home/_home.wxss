.vshop-top{
    position: relative;
    height: 100px;
    background: #fff;
    overflow: hidden;
    width: 100%;
}
.vshop-logo{
    width: 64px;
    height: 64px;
    border: 1px #fff solid;
    background-color: #efefef;
    border-radius: 100%;
    box-shadow: 1px 1px 1px #000;
}
.weui-navbar{
    position: relative;
    background: #fff;
}
.vshop-banner{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    -webkit-filter: blur(13px); /* Chrome, Opera */
       -moz-filter: blur(13px);
        -ms-filter: blur(13px);
            filter: blur(13px);
}
.vshop-info{
    position: absolute;
    display: flex;
    width: 100%;
    bottom: 0;
    left: 0;
    padding: 15px;
    color:#fff;
}
.vshop-logo{
    width: 64px;
    height: 64px;
    margin-right: 10px;
}
.shop-id{
    font-size: 12px;
    color:rgba(255,255,255,.8);
}
.keeper{
    font-size: 12px;
    color:rgba(255,255,255,.7);
}

/**goods-list**/
.goods-list{
    background: #fff;
    display: flex;
    flex-direction:row;
    flex-wrap: wrap;
    justify-content: center;
    align-items:stretch;
    border-top: 1px #efefef solid;
}
.goods-list .gl-item{
    flex: auto;
    width: 50%;
}
.vshop-items .co-item .weui-media-box__hd{
    width: 30%;
    height: 90px;
    line-height: 90px;
    overflow: hidden;
}
.vshop-items .co-item .weui-media-box__hd image{
    width: 100%;
    height: 100%;
    margin: 0;
}
.vshop-items .co-item .weui-media-box__bd{
    width: 70%;
}
.vshop-items .co-item{
    padding-right: 25px;
}
.vshop-items .co-name{
    color: #333;
}
.vshop-items .co-price{
    line-height: 22px;
    color: #f60;
    font-weight: lighter;
    font-stretch: ultra-condensed;
}
.vshop-items .co-price text{
    color: #999;
}

.vshop-items .co-inline{
    display: flex;
    align-items: center;
    justify-content:space-between;
}
.goods-list .gl-item-nav{
    border-bottom: 1px #efefef solid;
    border-right: 1px #efefef solid;
    padding: 10px;
}
.goods-list .gl-item-nav:nth-child(n+2){
    border-right: none;
}

.goods-list.grid image{
    width: 99%;
    margin: 10px 0 10px 0;
    height: 200px;
}
.goods-list .gl-item text{
    display: block;
}
.goods-list .g-name{
    line-height: 25px;
    height: 25px;
    overflow: hidden;

}
.goods-list .g-price{
    font-weight: lighter;
    color: #f00;
    font-size: 14px;
    font-stretch: ultra-condensed;
}
.vitems-top{
    line-height: 35px;
    display: flex;
    justify-content: space-between;
    width: 100%;
    background: #fff;
    border-top: 1px #666 solid;
    font-size: 14px;
    align-items: center;
}
.icon-empty-list{
    margin: 0 auto;
    width: 100px;
    height: 100px;
}
.vi-title{
    color: #666;
}
.vi-title,.vi-options{
    padding: 0 15px;

}
.vshop-items .weui-panel{
    margin-top: 0;
}
.vshop-qrcode .icon{
    width: 14px;
    height: 14px;
    margin-right: 4px;
}
.vshop-qrcode{
    background: rgba(255,255,255,0.7);
    border-radius: 4px;
    font-size: 12px;
    color:#666;
    padding: 4px 10px 4px 4px;
    height: 18px;
    display: flex;
    align-items: center;
    position: absolute;
    right: 26px;
    top:15px;
}
