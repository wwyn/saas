/* pages/vstore/agree/agree.wxss */
page{
  background:#FFFFFF;
}
.store-modal {
  height: 100%;
  background-color: #FFFFFF;
  padding: 0 26rpx 0;
  box-sizing: border-box;
  text-align: center;
  color: #fff;
}

.modal-title {
  font-size: 30rpx;
  margin:30rpx 0;
  color:#333;
  text-align:center;
  width:100%;
}

.modal-txt {
  display: block;
  font-size: 28rpx;
}
.modal-txt text{
  display:block;
  text-align:left;
  color:#999999;
  font-size:24rpx;
  margin-bottom:30rpx;
}
.clear {
  float: right;
  margin-top: -26rpx;
  margin-right: -26rpx;
}

.consent {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  background-color: #6699FF;
}
