page{
    background: #efefef;
}
.weui-tab{
    height: 34px;
}
.weui-search-bar{
    font-size: 14px;
    line-height: 28px;
}
picker{
    font-size: 14px;
    margin-right: 5px;
    line-height: 28px;
    color: #666;
    margin: 0 5px;
}
.status-icon{
    display: inline-block;
    color: #000;
    border: 1px #999 solid;
    border-radius: 2px;
    font-size: 12px;
    padding: 1px 4px;
    margin-left: 10px;
}
.status-icon.status-ready{
    border-color: rgb(264,45,115);
    color:rgb(264,45,115);
}
.status-icon.status-process{
    border-color: rgb(107,207,237);
    color:rgb(107,207,237);
}
.status-icon.status-succ{
    border-color: rgb(64,181,33);
    color:rgb(64,181,33);
}
.status-icon.status-noconfirm{
    border-color: red;
    color:red;
}
.price{
    color: #f30;
    font-weight: lighter;
}
.weui-form-preview{
    margin-top: 10px;
}
.weui-form-preview__hd .weui-form-preview__value{
    font-size: 22px;
}
.weui-form-preview__ft{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}
.btn{
    width: 70px;
    height: 30px;
    margin: 15px;
    border:1px solid #999999;
    border-radius: 4px;
    font-size: 14px;
    line-height: 30px;
    text-align: center;
}
.confirm-btn{
    background-color: #4BA0FA;
    border: 1px solid #4BA0FA;
    color: #ffffff;
}
.modal{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.2);
    z-index: 999;
    transform: translate3d(0,1000px,0);
    transition: transform 400ms lighter 0ms;
}
.wrapper{
    width: 750rpx;
    height: 750rpx;
    background-color: #ffffff;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}
.modal-head{
    position: relative;
    border-bottom: 1px solid #D8D8D8;
}
.title{
    color: #333333;
    font-size: 32rpx;
    font-weight: 500;
    text-align: center;
    width: 100%;
    height: 77rpx;
    line-height: 77rpx;
}
.cancel-icon{
    width: 40rpx;
    position: absolute;
    top: 22rpx;
    left: 40rpx;
}
.modal-body{
    margin-top: 40rpx;
}
.item{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    margin: 0 40rpx;
    border-bottom: 1px solid #D8D8D8;
}
.left{
    color: #888888;
    font-size: 26rpx;
    min-width: 120rpx;
}
.right{
    font-size: 26rpx;
}
.modal-footer{
    margin-top: 48rpx;
}
.error-msg{
    text-align: center;
    color: red;
    font-size: 28rpx;
    height: 44rpx;
}
.modal-footer button{
    width: 609rpx;
    height: 75rpx;
    line-height: 75rpx;
    background-color: #4BA0FA;
    color:#ffffff;
    border-radius: 37.5rpx;
    font-size: 28rpx;
    text-align: center;
}