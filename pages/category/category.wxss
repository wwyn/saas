.category-row{
    font-size: 14px;
    display: flex;
    align-items: stretch;
}
.weui-search-bar{
    border-top: none;
    border-bottom: none;
    position: relative;
    z-index: 10;
}
.layout-left{
    width: 30%;
}
.layout-right{
    width: 70%;
}
.col-left{
    background: #ececec;
}
.col-left .c-item{
    line-height: 40px;
    border-top:1px #efefef solid;
    border-bottom: 1px #e3e3e3 solid;
    background: #ececec;
    padding-left: 15px;
    white-space: nowrap;
    text-overflow:ellipsis;
    overflow: hidden;
    border-right: none;
}
.col-left .c-item:first-child{
    border-top: none;
}
.col-left .c-item.active{
    background: #fff;
}
.c-children{
    display: flex;
    flex-direction:row;
    flex-wrap: wrap;
    border-left: none;
    font-size: 12px;
    padding: 15px;
}
.c-children .c-item{
    width: 33%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 10px;
}
.c-children .c-item image{
    width: 100%;
    height: 60px;
    margin-bottom: 5px;
    border:1px #fff solid;
}
.c-children .hover-c-item view{
    color:#000;
}
