page{
    padding-bottom: 45px;
    background:#efefef;
}

.scroll-view{
    width: 100%;
}
.trash-item{
    width: 16px;
    height: 16px;
    position: absolute;
    left:0;
    right:0;
    top: 0;
    bottom: 0;
    margin: auto;
    background-image:url("data:image/svg+xml;base64,");
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;

}
.goods-promotion{
    line-height: 25px;
}
.order-promotion .weui-cell_link{
    color: #666;
}

.product-quantity{
    margin-top: 5px;
}
.co-check{
    margin-right: 10px;
}
.co-item{

}
.co-name{
    color: #333;
}
.co-price{
    line-height: 22px;
    color: #f60;
    font-weight: lighter;
    font-stretch: ultra-condensed;
}
.co-price text{
    color: #999;
}

.co-inline{
    display: flex;
    align-items: center;
    justify-content:space-between;
}


.cart-footer{
    z-index: 10;
    font-size: 12px;
    height: 45px;
    background-color: rgba(0,0,0,.8);
    color: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.go-checkout{
    background: rgb(227,69,69);
    height: 45px;
    line-height: 45px;
    font-size: 18px;
    width: 100px;
    text-align: center;
}
.cart-total{
    padding-left: 15px;
}
.cart-total .total text{
    font-weight: lighter;
    font-stretch: ultra-condensed;
    color: #f90;
}

.co-warning{
    color: #f90;
    display: flex;
    align-items: center;
    padding: 3px 0 0 0;
}
.weui-media-box__hd image{
    display: inline-block;
}

.weui-media-box{
    padding: 0;
}
.weui-media-box_appmsg{
    padding:15px 0;
}
.co-check{
    padding-left: 15px;
}
.weui-media-box__bd{
    padding-right: 15px;
}
.co-item{
    width: 100%;
    transition: margin-left 0.2s ease-in-out;
}
.weui-media-box-trash{
    position: absolute;
    top:0;
    left: 100%;
    font-size: 14px;
    color: #fff;
    background: rgb(227,69,69);
    width: 75px;
    height: 100%;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: margin-left 0.2s ease-in-out;
}
.showVIP {
  text-align: right;
  font-size: 24rpx;
  letter-spacing: 2rpx;
}
.showVIP_left {
  font-size: 24rpx;
  letter-spacing: 2rpx;
  padding: 15rpx 0;
   padding-left: 30rpx;
}
.showVIP_left text {
  font-size: 24rpx;
  color: #f90;
  margin-right: 30rpx;
  float: right;
}
.showVIP text {
  font-size: 24rpx;
  color: #f90;
  margin-right: 30rpx;
}
