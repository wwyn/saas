page{
 background:#efefef;
}
.ubalance-top{
    position: relative;
    color: #fff;
    background: linear-gradient(to bottom,#FE973E,#FEAF53);
    padding: 10px 0;
    text-align: center;
    font-size: 32px;
}
.weui-bar__item_on{
    border-bottom-color: #FE973E;
}
.opt-time{
    float: right;
}
.weui-navbar{
    position: relative;
    background: #fff;
}
.footer-btns{
    display: flex;
    align-items: center;
    bottom: 0;
    left: 0;
    width: 100%;
    margin: 0;
}
.footer-btns button{
    border: none;
    border-radius: 0;
    width: 50%;
    padding: 0;
    margin: 0;
}
.footer-btns button::after{
    border-radius: 0;
    padding: 0;
    margin: 0;
    border: none;
}
