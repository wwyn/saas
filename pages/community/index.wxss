@import "/pages/community/style/media.wxss";
page{
    background-color: #e9e9e9;
    padding-top: 31px;
}

.avatar{
    width: 70px;
    height: 70px;
    border-radius: 100%;
    border: 1px #efefef solid;
}
.weui-navbar{
    position: fixed;
    width: 100%;
    top:0;
    left: 0;
    background: #fff;
    color:#444;
    font-size: 12px;
    border-bottom: none;
    justify-content: flex-start;
    display: flex;

}
.weui-navbar__title{
    font-size: 14px;
}
.weui-navbar__item{

}
.weui-bar__item_on .weui-navbar__title{
    color: #fff;
}
.publish-btn{
    width: 50px;
    height: 50px;
    position: fixed;
    right: 15px;
    bottom: 65px;
    background: transparent;
}
.publish-btn .icon{
    height: 100%;
    width: 100%;
    background-size: cover;
    background-color: #fff;
    box-shadow: 0 0 5px 0 #999;
    border-radius: 100%;
}
.weui-bar__item_on .weui-navbar__title{
    color: rgb(227,69,69);
}
