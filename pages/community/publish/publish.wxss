.mediapub-swiper{
    height: 210px;
    margin-top: 35px;
    overflow: hidden;
}
.weui-footer{
    margin-top: 20px;
}
.indicator{
    display: flex;
    width: 100%;
    align-items: center;
    justify-content:center;
    background: #333;
    position: fixed;
    top:0;
    left: 0;
    z-index: 9999;
}
.indicator .item,.indicator .icon{
    width: 100%;
    background-size: auto 50%;
    height: 35px;
    border-radius: 4px 4px 0 0;
    /*transition: background-size 0.2s;
-webkit-transition: background-size 0.2s;
transition: background 0.2s;
-webkit-transition: background 0.2s;*/
}
.indicator .item:first-child{
    border-radius: 0 4px 0 0;
}
.indicator .item:last-child{
    border-radius: 4px 0 0 0;
}
.indicator .item.active{
    background: linear-gradient(to bottom,#ccc,#fff,#fff,#fff);
    /*transition: background 0.2s;
    -webkit-transition: background 0.2s;*/
}
.indicator .item.active .icon{
    background-size: auto 55%;
    /*transition: background-size 0.2s;
-webkit-transition: background-size 0.2s;*/


}
.publish-btn{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    margin: 0;
    border-radius: 0;
}
.publish::after{
    border-radius: 0;
}
.record-tmp-list{
    height: 140px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.record-tmp-list .icon{
    background-size:cover;
}
.remove-audio{
    text-align: center;
    margin:0 auto;
}
.remove-audio button,.remove-audio button::after{
    border-radius: 0;
}
.audio-duration{
    font-size: 12px;
    color: #999;
    line-height: 25px;
    text-align: center;
}
.audio-play-percent{
    width: 60%;
    margin: 0 auto;
    position: relative;
    margin-top: -20px;
    margin-bottom: 20px;
}
.audio-record-percent{
    width: 60%;
    margin: 0 auto;
}
.record-controls{
    background: #555;
    border-radius: 100%;
    width: 60px;
    height: 60px;
    position: relative;
    margin:70px auto 0 auto;
}
.record-controls .record{
    border: 2px solid #fff;
    border-radius: 100%;
    position: absolute;
    width: 44px;
    height: 44px;
    top:6px;
    left: 6px;
    transition:all 0.2s;
    -webkit-transition:all 0.2s;
}
.record-controls .record .sr-inner{
    background: #f00;
    width: 100%;
    height: 100%;
    border-radius: 100%;
    transition:all 0.2s;
    -webkit-transition:all 0.2s;
}
.record-controls .record.stop{
    background: #fff;
    transition:all 0.2s;
    -webkit-transition:all 0.2s;
}
.record-controls .record.stop .sr-inner{
    background: #f00;
    width: 60%;
    height: 60%;
    margin: 20%;
    border-radius: 5px;
    transition:all 0.2s;
    -webkit-transition:all 0.2s;
}
.tips{
    text-align: center;
    padding: 5px 0 5px 0;
    font-size: 12px;
    color: #ccc;
}
.choose-controls{
    text-align: center;
    line-height: 200px;
}
.choose-controls icon{
    width: 96px;
    height: 96px;
    -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
}
.video-box{
    width: 60%;
    height: 160px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
}
.video-box video{
    width: 100%;
    height: 140px;
}
.remove-video{
    text-align: center;
    margin:0 auto;
}
.remove-video button,.remove-video button::after{
    border-radius: 0;
}
.image-tmpfiles{
    display: flex;
    flex-wrap:wrap;
    padding: 15px 15px 0 15px;
}
.img-wrap{
    width: 52px;
    height: 52px;
    position: relative;
    border: 1px #ccc solid;
    padding: 1px;
    margin: 5px;
}
.img-wrap image{
    width: 52px;
    height: 52px;
}
.img-wrap icon{
    position: absolute;
    right: -3px;
    bottom:-3px;
}
.img-plus{

}
.img-plus icon{
    -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
    margin: 5px;
}
.weui-footer{
    margin-bottom: 20px;
}
.weui-textarea,.weui-input{
    padding: 0;
    margin: 0;
    display: block;
    width: 100%;
}
